\selectcolormodel{cmyk}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=black,bg=white}
\setbeamerfont{headline}{size=\LARGE}
\setbeamercolor{footline}{fg=rwthyellow, bg=rwthlightblue}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=black}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}

\setbeamercolor{framesubtitle}{fg=rwthlightblue, bg=rwthlightblue}
\setbeamercolor{author in head/foot}{fg=black, bg=rwthpetrol}
\setbeamercolor{title in head/foot}{fg=black, bg=rwthpetrol}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=black,bg=rwthyellow}
\setbeamerfont{block title}{size=\Large,series=\bf}
\setbeamercolor{upper separation line head}{fg=black}
\setbeamercolor{lower separation line head}{fg=black}

\setbeamercolor*{example body}{fg=rwthpetrol,bg=black}
\setbeamercolor*{example text}{fg=rwthpetrol,bg=black}
\setbeamercolor*{example title}{bg=black,fg=rwthpetrol}

%\setbeamercolor{alerted text}{fg=rwthlightblue}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=rwthblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%special bonus fade on block headers
%not yet implemented

%bibliography style
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor*{bibliography entry author}{fg=black}

%no ``figure'' in caption
\setbeamertemplate{caption}{\insertcaption} 

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
	\vskip.75ex
	\begin{beamercolorbox}[ht=5ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
		\usebeamerfont*{block title}%
		{\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
	\end{beamercolorbox}%
	{\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
	\usebeamerfont{block body}%
	\begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
		\ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
	}
	\setbeamertemplate{block end}{
	\end{beamercolorbox}
}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{headline}
		\begin{columns}[T]
			\begin{column}{.02\paperwidth}
				%page margin	
			\end{column}
  	  		\begin{column}{.2\paperwidth}
				%\vskip2ex
				%conference name
				\raggedleft
				10th European Combustion Meeting
  	  		\end{column}
       		\begin{column}{.01\paperwidth}
    			%page margin
    		\end{column}
			\vrule
       		\begin{column}{.01\paperwidth}
    			%page margin
    		\end{column}
  	  		\begin{column}{.2\paperwidth}
  	  			\vskip3ex
	   			%conference date/location
	   			April 14 - 16, 2021\\
	   			Napoli, Italy
      		\end{column}
      		\begin{column}{.54\paperwidth}
       		%\vskip2ex
       		%logos
        	\raggedleft
        	\includegraphics[width=.6\linewidth]{../figures/Logos/RWTH/PCFC.png}
        	%other logos?
			\end{column}
	        \begin{column}{.02\paperwidth}
	        	%page margin
	        \end{column}
		\end{columns}
	\end{beamercolorbox}
	\vskip0.4ex
	\begin{beamercolorbox}[wd=\paperwidth]{black}
		\centering
		\rule{0.96\paperwidth}{5pt}
	\end{beamercolorbox}

	\begin{beamercolorbox}[wd=\paperwidth]{block body}
		\begin{center}
			\usebeamercolor{title in headline}{\color{fg}\textbf{\large{\inserttitle}}\\[1ex]}
			\usebeamercolor{author in headline}{\color{fg}\normalsize{\insertauthor}\\[1ex]}
			\usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
		\end{center}
	\end{beamercolorbox}
}

